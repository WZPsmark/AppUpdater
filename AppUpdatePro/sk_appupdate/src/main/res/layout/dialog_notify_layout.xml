<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:minHeight="280dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:background="@drawable/dialog_bg"
            android:padding="10dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="换手需要更新啦!"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                />

            <TextView
                android:id="@+id/new_version_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:text="v1.0.1"
                android:textColor="@android:color/black"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/size"
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:text="新版本大小：30M"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:text="更新信息："
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:textColor="@android:color/background_dark"
                android:layout_margin="10dp"
                android:textSize="14sp"
                android:text="1、修改bug"
                android:layout_height="wrap_content">

            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cancer"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="暂不更新"
                    android:layout_marginRight="10dp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/cancer_bg"
                    android:layout_height="40dp">
                </TextView>
                <TextView
                    android:id="@+id/update"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:text="立即更新"
                    android:background="@drawable/update_bg"
                    android:layout_height="40dp">
                </TextView>
            </LinearLayout>


        </LinearLayout>

        <com.sk.appupdate.view.CircleImageView
            android:id="@+id/app_icon"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            android:src="@android:drawable/ic_lock_idle_alarm" />

    </FrameLayout>

</LinearLayout>
